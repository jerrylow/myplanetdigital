<!DOCTYPE html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js"><!--<![endif]-->
	<head>
		<% if @document.title?: %>
			<title><%= @document.title %> | <%= @site.title %></title>
		<% else: %>
			<title><%= @site.title %></title>
		<% end %>
		<%- @getBlock("meta").toHTML() %>
		<%- @getBlock('styles').add(@getUrl(@site.styles)).toHTML() %>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<% if @document.summary?: %>
			<meta name="description" content="<%= @document.summary %>">
		<% end %>
	</head>
	<body role="document">
		<header class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="<%- @getUrl('/') %>" class="navbar-brand" title="Myplanet Digital"><span>Myplanet Digital</span></a>
				</div>
				<div class="navbar-collapse collapse">
					<%- @partial('menu', {menuItems: @generateMenu(@document.url, 'menu')}) %>
				</div>
			</div>
		</header>

		<section class="container" role="main">
			<%- @content %>
		</section>

		<%- @partial('footer') %>

		<%- @getBlock('scripts').add(@getUrl(@site.scripts)).toHTML() %>
	</body>
</html>
