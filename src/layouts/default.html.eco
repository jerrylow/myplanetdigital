<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<% if @document.title?: %>
			<title><%= @document.title %> | <%= @site.title %></title>
		<% else: %>
			<title><%= @site.title %></title>
		<% end %>
		<% if @document.summary?: %>
			<meta name="description" content="<%= @document.summary %>">
		<% end %>
		<%- @getBlock("meta").toHTML() %>
		
		<!--[if !IE]> -->
		<%- @getBlock('styles').add(@getUrl(@site.styles)).toHTML() %>
		<!-- <![endif]-->
		
		<!--[if (IE 8) | (IE 9)]>
		<link rel="stylesheet" href="<%- @getUrl(@site.ie8styles[0]) %>">				
		<![endif]-->

		<!--[if IE 8]>
		<script src="<%- @getUrl(@site.html5shiv[0]) %>"></script>
		<script>
			window.html5 = {
				'elements': 'section article footer',
				'shivCSS': false,
				'shivMethods': false				
			}
			window.isIE8 = true;
		</script> 
		<![endif]-->
		<link rel="icon" type="image/png" href="<%= @getUrl('/favicon.png') %>" />
	</head>

	<body class="<% if @document.layout != 'articles': %> article <% end %>">
		<div id="wrap">
			<h1 id="logo">
				<a href="<%= @getUrl('/') %>">Myplanet</a>
			</h1>
			<div id="viewport">
				
				<section id="main">
					<div class="main-wrap">
						<% if @document.layout is 'articles': %>
						<div class="grid-size"></div>
						<%- @content %>
						<% end %>
					</div>
				</section>
				
				<!--[if (!IE) | (gte IE 10)]> -->
				<article id="article">					
					<!-- Article goes here for modern browsers -->
					<%- @content %>					
				</article>
				<!-- <![endif]-->

				<!--[if (IE 8) | (IE 9)]>
				<% if @document.layout != 'articles': %>
				<article id="article">										
					<%- @content %>
				</article>
				<% end %>
				<![endif]-->
				
			</div>

			<!-- MENU GOES HERE -->
			<%- @partial('menu', {menuItems: @generateMenu(@document.url, 'menu')}) %>
		</div>

		<%- @partial('footer') %>
		<!--[if IE 8]>
		<script src="<%- @getUrl(@site.jquery1[0]) %>"></script> 
		<![endif]-->
		<!--[if (!IE) | (gte IE 9)]> -->
		<script src="<%- @getUrl(@site.jquery2[0]) %>"></script>
		<!-- <![endif]-->
		<%- @getBlock('scripts').add(@getUrl(@site.scripts)).toHTML() %>
	</body>
</html>
