<!DOCTYPE html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js"><!--<![endif]-->
	<head>
		<% if @document.title?: %>
			<title><%= @document.title %> | <%= @site.title %></title>
		<% else: %>
			<title><%= @site.title %></title>
		<% end %>
		<%- @getBlock("meta").toHTML() %>
		<%- @getBlock('styles').add(@getUrl(@site.styles)).toHTML() %>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<% if @document.summary?: %>
			<meta name="description" content="<%= @document.summary %>">
		<% end %>
	</head>

	<body>
		<div id="wrap">
			<h1 id="logo">
				<a href="<%= @getUrl('/') %>">Myplanet</a>
			</h1>
			<div id="viewport">
				<% if @document.layout is 'articles': %>
					<section id="main">
						<div class="main-wrap">
							<div class="grid-size"></div>
							<%- @content %>
						</div>
					</section>
				<% else: %>
					<article id="article">
						<!-- Article goes here -->
						<%- @content %>
					</article>
				<% end %>

			</div>

			<!-- MENU GOES HERE -->
			<%- @partial('menu', {menuItems: @generateMenu(@document.url, 'menu')}) %>
		</div>

		<%- @partial('footer') %>

		<%- @getBlock('scripts').add(@getUrl(@site.scripts)).toHTML() %>
	</body>
</html>
