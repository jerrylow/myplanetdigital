<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0">
		<% if @document.title?: %>
			<title><%= @document.title %> | <%= @site.title %></title>
		<% else: %>
			<title><%= @site.title %></title>
		<% end %>
		<script>
			 (new Image()).src = "/images/loading.gif";
		</script>
		<% if @document.summary?: %>
			<meta name="description" content="<%= @document.summary %>">
		<% end %>
		<%- @getBlock("meta").toHTML() %>
		<!--[if !IE]> -->
		<%- @getBlock('styles').add(@getUrl(@site.styles)).toHTML() %>
		<!-- <![endif]-->

		<!--[if (IE 8) | (IE 9)]>
		<link rel="stylesheet" href="<%- @getUrl(@site.ie8styles[0]) %>">
		<![endif]-->

		<!--[if IE 8]>
		<script src="<%- @getUrl(@site.html5shiv[0]) %>"></script>
		<script>
			window.html5 = {
				'elements': 'section article footer',
				'shivCSS': false,
				'shivMethods': false
			}
			window.isIE8 = true;
		</script>
		<![endif]-->
		<link rel="icon" type="image/png" href="<%= @getUrl('/favicon.png') %>" />
	</head>

	<body class="<% if @document.layout != 'articles': %>article <% end %>">
		<div id="wrap">
			<h1 id="logo">
				<a href="<%= @getUrl('/') %>">Myplanet</a>
			</h1>
			<div id="back">
				<a href="<%= @getUrl('/') %>" data-attr="back">Back</a>
			</div>
			<div id="viewport">

				
				<section id="main" <% if @document.layout != 'articles': %>style="transition: none; -webkit-transition: none; position: absolute;"<% end %>>

					<div id="banner" class="<% if @document.meta.tagName?: %><%- @document.meta.tagName %><% end %>">
						<div class="banner-text">
						<% if @document.meta.menuBanner?: %>
					  		<%- @document.meta.menuBanner %>
						<% end %>
						</div>
					</div>

					<div class="main-wrap" style="position: relative;">
						<% if @document.layout is 'articles': %>
						<div class="grid-size"></div>
						<%- @content %>
						<% end %>
						<script src="<%- @getUrl(@site.isotope[0]) %>"></script>
						<script>
						<% if @document.layout != 'articles': %>
							window.initializeTiles = function(){
						<% end %>
						    <%- @include(@site['tiles-immediate'][0]) %>
						<% if @document.layout != 'articles': %>
							};
						<% end %>
						</script>
					</div>
					<div class="loading-overlay-tiles" <% if @document.layout == 'articles': %>style="display:none;"<% end %>>
						<div class="loading-spinner"></div>
					</div>
					<%- @partial('footer') %>
				</section>

				<article id="article" <% if @document.layout != 'articles': %>style="position: static; margin-left: 100%;"<% end %>>
					<div id="article-inner"  <% if @document.layout != 'content' && @document.layout != 'articles': %>class="reveal"<% end %>>
						<% if @document.layout != 'articles': %>
						<%- @content %>
						<% end %>
					</div>
					<div class="loading-overlay" <% if @document.layout != 'articles': %>style="display:none;"<% end %>>
						<div class="loading-spinner"></div>
					</div>
                    <!--[if (IE 8) | (IE 9)]>
                    <%- @partial('footer') %>
                    <![endif]-->
				</article>
			</div>

			<!-- MENU GOES HERE -->
			<%- @partial('menu', {menuItems: @generateMenu(@document.url, 'menu')}) %>
		</div>
		<!--[if IE 8]>
		<script src="<%- @getUrl(@site.jquery1[0]) %>"></script>
		<script src="<%- @getUrl(@site['menu-ie8'][0]) %>"></script>
		<![endif]-->
		<!--[if (!IE) | (gte IE 9)]> -->
		<script src="<%- @getUrl(@site.jquery2[0]) %>"></script>
		<!-- <![endif]-->
		<%- @getBlock('scripts').add(@getUrl(@site.scripts)).toHTML() %>
		<!--[if (IE 8) | (IE 9)]>
		<script src="<%- @getUrl(@site['menu-ie8'][0]) %>"></script>
		<![endif]-->
	</body>
</html>
