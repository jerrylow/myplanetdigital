<% if @document.size is "2x1": %>
    <article id="post" class="col-md-8 col-sm-12 col-xs-12">
<% else: %>
    <article id="post" class="col-md-4 col-sm-6 col-xs-12">
<% end %>
    <h1><a href='<%=@document.url%>'><%= @document.title %></a></h1>
    <div class="post-content">
        <%- @document.summary %>
    </div>
</article>